<%= form_for(@contractor, :html => { :multipart => true }) do |f| %>
  <% if @contractor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contractor.errors.count, "error") %> prohibited this contractor from being saved:</h2>

      <ul>
      <% @contractor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-md-4">
  <div class="form-group">
     <%= f.label :logo %><br>
  <%= f.file_field :logo %>
  </div>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name ,class:"form-control"%>
  </div>
    <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.text_field :phone,class:"form-control" %>
  </div>
    <div class="form-group">
    <%= f.label :fax %><br>
    <%= f.text_field :fax,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email ,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "First Name" %><br>
    <%= f.text_field :firstname,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "Last Name"%><br>
    <%= f.text_field :lastname ,class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_area :address,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :city %><br>
    <%= f.text_field :city ,class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :state %><br>
    <%= f.text_field :state,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :zipcode %><br>
    <%= f.text_field :zipcode,class:"form-control" %>
  </div>
</div>
<div class="col-md-4">
  <div class="form-group">
    <%= f.label :licenseNo, "License No" %><br>
    <%= f.text_field :licenseNo ,class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :licenseClass ,"License Class" %><br>
    <%= f.text_field :licenseClass,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :bondingcapacity,"Bonding Capacity" %><br>
    <%= f.text_field :bondingcapacity,class:"form-control" %>
  </div>

  <div class="checkbox">
    <strong> Trade </strong>
  <ul style="list-style-type:none;">
     <% @trades.each  do |trade| %>
        <li> <%= check_box_tag  "trade_id[]",trade.id,(checked = true if @selectedtrades.collect{|t| t.id}.include?(trade.id)) %> <%= trade.name %> </li>
    <%end%>
  </ul>
</div>
  <div class="form-group">
    <%= f.label :certificationType,"Certification Type" %><br>
    <%= f.text_field :certificationType ,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :ownershipType,"Ownership Type" %><br>
    <%= f.text_field :ownershipType ,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :sfCertificationNumber,"SF Certification Number" %><br>
    <%= f.text_field :sfCertificationNumber,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :sfVendorNumber,"SF Vendor Number" %><br>
    <%= f.text_field :sfVendorNumber ,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :firmSize, "Firm Size" %><br>
    <%= f.text_field :firmSize ,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :bonding do %>
   <p>  <%= f.check_box :bonding %> Bonding </p>
   <% end %>
  </div>
  <div class="form-group">
    <%= f.label :bondingLmtSngProj, "Bonding Limit - Single Project" %><br>
    <%= f.text_field :bondingLmtSngProj ,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :bondingLmtAgg, "Bonding Limit - Aggregate" %><br>
    <%= f.text_field :bondingLmtAgg ,class:"form-control" %>
  </div>
  </div>
  <div class="col-md-4">
     <div class="checkbox">
    <strong> Public Work (Experience) </strong>
      <ul style="list-style-type:none;">
        <% @publicworksexp.each  do |pwe| %>
        <li> <%= check_box_tag  "publicworksexp_id[]",pwe.id,(checked = true if @selectedpwe.collect{|t| t.id}.include?(pwe.id)) %> <%= pwe.name %> </li>
        <%end%>
      </ul>
    </div>

    <div class="checkbox">
    <strong> Largest Public Works Projects: </strong>
      <ul style="list-style-type:none;">
        <% @largestpublicworksproj.each  do |lpwp| %>
        <li> <%= check_box_tag  "largestpublicworksproj_id[]",lpwp.id,(checked = true if @selectedlpwp.collect{|t| t.id}.include?(lpwp.id)) %> <%= lpwp.name %> </li>
        <%end%>
      </ul>
    </div>

    <div class="form-group">
    <%= f.label :comments %><br>
    <%= f.text_area :comments,class:"form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
</div>
</div>
<% end %>
